<mygroups>
    FloatLayout:
        size: root.width, root.height
        #top header to go back to homepage
        Label:
            size_hint: (1, .05)
            pos_hint: {"right": 1, "top":1}
            canvas.before:
                Color:
                    rgba: 0, 0, 1, 1
                Rectangle: 
                    pos: self.pos
                    size: self.size
        Button: 
            text:"Iristudy"
            size_hint:(.3, .05)
            pos_hint: {"center_x":.5, "top":1}

        Label: 
            text:"My Groups"
            font_size: 20
            size_hint: (1, .08)
            pos_hint: {"right": 1, "top":.95}

        #each group tab 
        
        scrollingtest:
            pos_hint: {"x":0, "y": 0}

        #homepage buttons on bottom
        BoxLayout:
            orientation: "horizontal"
            size_hint: (1, .1)
            spacing:-2
            padding: -2
            Button:
                text:"my groups"
            Button:
                text:"add group"
            Button:
                text:"my profile"