#:kivy 2.1.0
#:import utils kivy.utils
#:import Window kivy.core.window
#:import ScreenManager kivy.uix.screenmanager

<Login>:
    name: 'login'
    FloatLayout:
        size: root.width, root.height
        canvas.before:
            Color:
                rgb: utils.get_color_from_hex('#F1E6F8')
            Rectangle:
                pos: self.pos
                size: self.size
        
        Image:
            source: 'assets/images/logocropped.png'
            size_hint: 0.3, 0.2
            pos_hint: {'x':0.35, 'top': 0.85}

        Label: 
            text: "Username" 
            color: (0, 0, 0)
            font_name: 'assets/fonts/static/Fredoka/Fredoka-regular'
            size_hint: 0.2, 0.05
            pos_hint: {'x':0.23, 'top': 0.68}
        
        TextInput: 
            multiline: False
            hint_text: "Username"
            color: (0.5, 0.5, 0.5)
            background_normal: ''
            background_color: (1,1,1,0.5)
            font_name: 'assets/fonts/static/Fredoka/Fredoka-regular'
            size_hint: 0.5, 0.04
            pos_hint: {'x':0.25, 'top': 0.64}
        
        Label: 
            text: "Password" 
            color: (0, 0, 0)
            font_name: 'assets/fonts/static/Fredoka/Fredoka-regular'
            size_hint: 0.2, 0.05
            pos_hint: {'x':0.23, 'top': 0.6}

        TextInput: 
            multiline: False
            password: True
            color: (0.5, 0.5, 0.5)
            background_normal: ''
            background_color: (1,1,1,0.5)
            foreground_color: (0,0,0)
            hint_text: "Password"
            font_name: 'assets/fonts/static/Fredoka/Fredoka-regular'
            size_hint: 0.5, 0.04
            pos_hint: {'x':0.25, 'top': 0.56}



        Button: 
            text: "LOG IN"
            color: (0,0,0)
            background_normal: ''
            background_color: (0,0,0,0)
            font_name: 'assets/fonts/static/Fredoka/Fredoka-bold'
            size_hint: 0.2, 0.04
            pos_hint: {'x':0.4, 'top': 0.50}
            on_release: app.root.current = "home" 
            canvas.before:
                Color:
                    rgb: utils.get_color_from_hex('#BF98D1')
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [10]

        Button: 
            text: "SIGN UP"
            color: (0,0,0)
            background_normal: ''
            background_color: (0,0,0,0)
            font_name: 'assets/fonts/static/Fredoka/Fredoka-bold'
            size_hint: 0.2, 0.04
            pos_hint: {'x':0.4, 'top': 0.44}
            on_press: app.root.current = 'AccountApp'
            canvas.before:
                Color:
                    rgb: utils.get_color_from_hex('#BF98D1')
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [10]

