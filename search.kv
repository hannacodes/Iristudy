#:kivy 2.1.0
<SearchGroupScreen>
    
    FloatLayout:
        size: root.width, root.height
        #top header to go back to homepage
        Label:
            size_hint: (1, .05)
            pos_hint: {"right": 1, "top":1}
            canvas.before:
                Color:
                    rgba: 0, 0, 1, 1
                Rectangle: 
                    pos: self.pos
                    size: self.size
        Button: 
            text:"Iristudy"
            size_hint:(.3, .05)
            pos_hint: {"center_x":.5, "top":1}
        #search bar
        TextInput:
            size_hint: (.94, None)
            height: 30
            pos_hint: {"x": 0.03, "top": 0.93}
            hint_text: "Search"
            multinline:False


        Label:
            pos_hint: {"x": 0, "y": 0.34}
            text: "BRUH"
        # rectangle of groups to scroll through
        ScrollView:
            do_scroll_x: False
            do_scroll_y: True

            pos_hint: {'x':0, 'y': 0.1}
            size_hint_y: 0.70
            
            BoxLayout:
                size:(root.width, root.height)
                height: self.minimum_height
                row_default_height: 180
    		    row_force_default: True
                size_hint_y: None
                height: 1
                orientation: 'vertical'
                
                Button:
                    text: 'Hello World'
                    background_color: (0, 0, 1, 1)
