#:kivy 2.1.0
<CreateFormLayout>
    GridLayout:
        cols:1
        size: root.width, root.height

        GridLayout:
            cols:2

            # buttons 
            Label:
                text: "Creator Name: "
            TextInput:
                multiline: False

            Label:
                text: "Group Name: "
            TextInput:
                multiline: False

            Label:
                text: "Subject: "
            DropDown:
                Button:
                    text: 'My first Item'
                    size_hint_y: None
                    height: 44
                    on_release: root.select('item1')
                Label:
                    text: 'Unselectable item'
                    size_hint_y: None
                    height: 44
                Button:
                    text: 'My second Item'
                    size_hint_y: None
                    height: 44
                    on_release: root.select('item2')

            Label:
                text: "Time: "
            Label:
                text: "When2MeetPlaceHolder"

            Label:
                text: "Description: "
            TextInput:
                multiline: True

            Button:
                text: "Submit: "

            # assign a random group id, do logic in
            # python file
            # subject should be a dropdown


