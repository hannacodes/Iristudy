#:kivy 2.1.0
#:import utils kivy.utils
<Profile> 
    FloatLayout: 
        size: root.width, root.height
        
        canvas.before:
            Color:
                rgb: utils.get_color_from_hex('#F1E6F8')
            Rectangle:
                pos: self.pos
                size: self.size

        #top header to go back to homepage
        Label:
            size_hint: (1, .06)
            pos_hint: {"right": 1, "top":1}
            canvas.before:
                Color:
                    rgb: utils.get_color_from_hex('#BF98D1')
                Rectangle: 
                    pos: self.pos
                    size: self.size
        Button: 
            size_hint:(.55, .05)
            pos_hint: {"center_x":.5, "top":1}
            background_normal: ""
            background_color: utils.get_color_from_hex('#BF98D1')
            on_press: self.background_color = (1.2, 1.2, 1, 0)
            on_release: self.background_color = utils.get_color_from_hex('#BF98D1')
            on_press: app.root.current = 'home'
            canvas:
                Rectangle:
                    source: "assets/images/logoontop.png"
                    size: self.size
                    pos: self.pos
        #end header

        Button:
            background_color: 0, 0, 0, 0
            size_hint: 0.15, 0.06
            pos_hint: {'x':0.15, 'top':0.81}
            canvas:
                Color:
                    rgb: (1, 1, 1, 1) 
                RoundedRectangle:
                    source: 'assets/images/flowerpfp.png'
                    pos: (self.pos)
                    radius: [400, ]
       
        
        Label: 
            text: "NAME"
            font_name: 'assets/fonts/static/Fredoka/Fredoka-Medium'
            font_size: "25sp"
            size_hint: 0.01, 0.2
            color: (0, 0, 0)
            pos_hint: {'x':0.65, 'top':0.97}

        Label: 
            text: "pronouns"
            font_size:"15sp"
            font_name: 'assets/fonts/static/Fredoka/Fredoka-regular'
            size_hint:  0.01, 0.2
            color: (0, 0, 0)
            pos_hint: {'x':0.65, 'top':0.94}
        
        Label:
            text: "BIO"
            font_name: 'assets/fonts/static/Fredoka/Fredoka-Medium'
            font_size:"20sp"
            size_hint: 0.2, 0.1
            color: (0, 0, 0)
            pos_hint: {'x':0.05, 'top':0.79}
        
        TextInput: 
            id: bio
            text: "Lorem ipsum dolor sit amet, consectetur adipiscing elit. Vestibulum non tortor auctor, auctor tellus euismod, dictum arcu. Quisque tortor ex, interdum sodales vehicula id, mattis vel felis. Pellentesque eget quam dui. Morbi est purus, faucibus ac accumsan vitae, suscipit sit amet nisl. Suspendisse et pulvinar diam, et pellentesque nibh."
            disabled:True
            multiline:True
            background_color: (1,1,1,0.5)
            foreground_color: (0,0,0)
            cursor_color: utils.get_color_from_hex('#7F31A3')
            font_name: 'assets/fonts/static/Fredoka/Fredoka-regular'
            font_size: "10sp"
            color: (0, 0, 0)
            size_hint: 0.74, 0.2
            pos_hint: {'x':0.13, 'top':0.71}

        Label:
            text: "USER INFO"
            font_name: 'assets/fonts/static/Fredoka/Fredoka-Medium'
            color: (0, 0, 0)
            font_size:"20sp"
            size_hint: 0.2, 0.1
            pos_hint: {'x':0.15, 'top':0.50}
        

        Label:
            text: "Username:"
            font_name: 'assets/fonts/static/Fredoka/Fredoka-regular'
            color: (0, 0, 0)
            font_size:"15sp"
            size_hint: 0.3, 0.1
            pos_hint: {'x':0.06, 'top':0.45}
        
        TextInput: 
            id: username
            text: "@XXXXXXXXXXXX"
            background_color: (1,1,1,0.5)
            foreground_color: (0,0,0)
            cursor_color: utils.get_color_from_hex('#7F31A3')
            font_name: 'assets/fonts/static/Fredoka/Fredoka-regular'
            disabled:True
            font_size: "10sp"
            size_hint: 0.3, 0.04
            pos_hint: {'x':0.33, 'top':0.42}
        
        Label:
            text: "Password:"
            font_name: 'assets/fonts/static/Fredoka/Fredoka-regular'
            color: (0, 0, 0)
            font_size:"15sp"
            size_hint: 0.3, 0.1
            pos_hint: {'x':0.06, 'top':0.39}
        
        TextInput: 
            id: password
            text: "password"
            password: True
            background_color: (1,1,1,0.5)
            foreground_color: (0,0,0)
            cursor_color: utils.get_color_from_hex('#7F31A3')
            font_name: 'assets/fonts/static/Fredoka/Fredoka-regular'
            disabled:True
            font_size: "10sp"
            size_hint: 0.3, 0.04
            pos_hint: {'x':0.33, 'top':0.36}


        Label:
            text: "CONTACT"
            font_name: 'assets/fonts/static/Fredoka/Fredoka-Medium'
            color: (0, 0, 0)
            font_size:"20sp"
            size_hint: 0.2, 0.1
            pos_hint: {'x':0.14, 'top':0.32}

        Label:
            text: "Email:"
            font_name: 'assets/fonts/static/Fredoka/Fredoka-regular'
            color: (0, 0, 0)
            font_size:"15sp"
            size_hint: 0.3, 0.1
            pos_hint: {'x':0.02, 'top':0.27}
        
        TextInput: 
            id: email
            text: "xxxxx@gmail.com"
            background_color: (1,1,1,0.5)
            foreground_color: (0,0,0)
            cursor_color: utils.get_color_from_hex('#7F31A3')
            font_name: 'assets/fonts/static/Fredoka/Fredoka-regular'
            disabled:True
            font_size: "10sp"
            size_hint: 0.3, 0.04
            pos_hint: {'x':0.25, 'top':0.24}

        Button: 
            text: "Edit"
            background_color: utils.get_color_from_hex('#BF98D1')
            on_press: email.disabled = False; bio.disabled = False; password.disabled = False; username.disabled = False; 
            size_hint: 0.2, 0.05
            pos_hint: {"x": 0.5, "top": 0.18}
        
        Button: 
            text: "Log Out"
            background_color: utils.get_color_from_hex('#BF98D1')
            on_press: app.root.current = 'login'; 
            size_hint: 0.2, 0.05
            pos_hint: {"x": 0.3, "top": 0.18}

        #start of footer
        BoxLayout:
            orientation: "horizontal"
            size_hint: (1, .1)
            spacing:-1
            Button:
                background_normal: ""
                background_color: utils.get_color_from_hex('#BF98D1')
                on_press: self.background_color = (1.2, 1.2, 1, 0); app.root.current = 'mygroups'
                on_release: self.background_color = utils.get_color_from_hex('#BF98D1')
                FloatLayout:
                    Image:
                        source: "assets/images/mygroupsicon.png"
                        size_hint: (0.5, 0.5)
                        pos_hint: {"center_x": 0.5, "center_y": 0.3}
            Button:
                background_normal: ""
                background_color: utils.get_color_from_hex('#BF98D1')
                on_press: self.background_color = (1.2, 1.2, 1, 0); app.root.current = 'create'
                on_release: self.background_color = utils.get_color_from_hex('#BF98D1')
                FloatLayout:
                    Image:
                        source: "assets/images/addgroupicon.png"
                        size_hint: (0.5, 0.5)
                        pos_hint: {"center_x": 1.6, "center_y": 0.28}
            Button:
                background_normal: ""
                background_color: utils.get_color_from_hex('#BF98D1')
                on_press: self.background_color = (1.2, 1.2, 1, 0); app.root.current = 'profile'
                on_release: self.background_color = utils.get_color_from_hex('#BF98D1')
                FloatLayout:
                    Image:
                        source: "assets/images/myprofileicon.png"
                        size_hint: (0.4, 0.4)
                        pos_hint: {"center_x": 2.65, "center_y": 0.28}