#:kivy 2.1.0
<SearchGroupScreen>
    
    FloatLayout:
        size: root.width, root.height
        #top header to go back to homepage
        Label:
            size_hint: (1, .05)
            pos_hint: {"right": 1, "top":1}
            canvas.before:
                Color:
                    rgba: 0, 0, 1, 1
                Rectangle: 
                    pos: self.pos
                    size: self.size
        Button: 
            text:"Iristudy"
            size_hint:(.3, .05)
            pos_hint: {"center_x":.5, "top":1}
        #search bar
        TextInput:
            size_hint: (.94, None)
            height: 30
            pos_hint: {"x": 0.03, "top": 0.93}
            hint_text: "Search"
            multinline:False


        Label:
            pos_hint: {"x": 0, "y": 0.34}
            color: (1, 1, 1, 1)
            text: "Groups"
        # rectangle of groups to scroll through
        ScrollView:
            do_scroll_x: False
            do_scroll_y: True

            pos_hint: {'x':0, 'y': 0.1}
            size_hint_y: 0.70
            
            BoxLayout:
                size:(root.width, root.height)
                height: self.minimum_height
                row_default_height: 180
    		    row_force_default: True
                size_hint_y: None
                height: 1
                orientation: 'vertical'
                
                Button:
                    text: 'Hello World'
                    background_color: (0, 0, 1, 1)
                Button:
                    text: 'Hello World'
                    background_color: (1, 0, 0, 1)

                Button:
                    text: 'Hello World'
                    background_color: (1, 0, 0, 1)

                Button:
                    text: 'Hello World'
                    background_color: (0, 0, 1, 1)
                Button:
                    text: 'Hello World'
                    background_color: (1, 0, 0, 1)

                Button:
                    text: 'Hello World'
                    background_color: (0, 0, 1, 1)

                Button:
                    text: 'Hello World'
                    background_color: (1, 0, 0, 1)

                Button:
                    text: 'Hello World'
                    background_color: (0, 0, 1, 1)

                Button:
                    text: 'Hello World'
                    background_color: (1, 0, 0, 1)

                Button:
                    text: 'Hello World'
                    background_color: (0, 0, 1, 1)
                Button:
                    text: 'Hello World'
                    background_color: (1, 0, 0, 1)

                Button:
                    text: 'Hello World'
                    background_color: (0, 0, 1, 1)
                Button:
                    text: 'Hello World'
                    background_color: (1, 0, 0, 1)

                Button:
                    text: 'Hello World'
                    background_color: (0, 0, 1, 1)
            

        #homepage buttons on bottom
        BoxLayout:
            orientation: "horizontal"
            size_hint: (1, .1)
            spacing:-1
            Button:
                background_normal: ""
                background_color: utils.get_color_from_hex('#BF98D1')
                on_press: self.background_color = (1.2, 1.2, 1, 0); app.root.current = 'mygroups'
                on_release: self.background_color = utils.get_color_from_hex('#BF98D1')
                FloatLayout:
                    Image:
                        source: "assets/images/mygroupsicon.png"
                        size_hint: (0.5, 0.5)
                        pos_hint: {"center_x": 0.5, "center_y": 0.3}
            Button:
                background_normal: ""
                background_color: utils.get_color_from_hex('#BF98D1')
                on_press: self.background_color = (1.2, 1.2, 1, 0); app.root.current = 'create'
                on_release: self.background_color = utils.get_color_from_hex('#BF98D1')
                FloatLayout:
                    Image:
                        source: "assets/images/addgroupicon.png"
                        size_hint: (0.5, 0.5)
                        pos_hint: {"center_x": 1.6, "center_y": 0.28}
            Button:
                background_normal: ""
                background_color: utils.get_color_from_hex('#BF98D1')
                on_press: self.background_color = (1.2, 1.2, 1, 0); app.root.current = 'profile'
                on_release: self.background_color = utils.get_color_from_hex('#BF98D1')
                FloatLayout:
                    Image:
                        source: "assets/images/myprofileicon.png"
                        size_hint: (0.4, 0.4)
                        pos_hint: {"center_x": 2.65, "center_y": 0.28}