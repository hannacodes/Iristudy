#:import utils kivy.utils
<mygroups>
    FloatLayout:
        size: root.width, root.height
        canvas.before: 
            Color: 
                rgb: utils.get_color_from_hex('#F1E6F8')
            Rectangle:
                pos: self.pos
                size: self.size
        #top header to go back to homepage
        Label:
            size_hint: (1, .06)
            pos_hint: {"right": 1, "top":1}
            canvas.before:
                Color:
                    rgb: utils.get_color_from_hex('#BF98D1')
                Rectangle: 
                    pos: self.pos
                    size: self.size
        Button: 
            size_hint:(.55, .05)
            pos_hint: {"center_x":.5, "top":1}
            background_normal: ""
            background_color: utils.get_color_from_hex('#BF98D1')
            on_press: self.background_color = (1.2, 1.2, 1, 0)
            on_press: app.root.current = 'home'
            on_release: self.background_color = utils.get_color_from_hex('#BF98D1')
            canvas:
                Rectangle:
                    source: "assets/images/logoontop.png"
                    size: self.size
                    pos: self.pos
        
        Label: 
            text:"My Groups"
            font_name: 'assets/fonts/static/Fredoka/Fredoka-Medium'
            font_size: "25sp"
            color: (0, 0, 0)
            size_hint: (1, .1)
            pos_hint: {"right": 1, "top":.95}

        #each group tab 
        Scroll: 
            pos_hint: {"x":0, "top": 0.85}
            size_hint_y: 0.745
            
        #homepage buttons on bottom
        BoxLayout:
            orientation: "horizontal"
            size_hint: (1, .1)
            spacing:-1
            Button:
                background_normal: ""
                background_color: utils.get_color_from_hex('#BF98D1')
                on_press: self.background_color = (1.2, 1.2, 1, 0); app.root.current = 'mygroups'
                on_release: self.background_color = utils.get_color_from_hex('#BF98D1')
                FloatLayout:
                    Image:
                        source: "assets/images/mygroupsicon.png"
                        size_hint: (0.5, 0.5)
                        pos_hint: {"center_x": 0.5, "center_y": 0.3}
            Button:
                background_normal: ""
                background_color: utils.get_color_from_hex('#BF98D1')
                on_press: self.background_color = (1.2, 1.2, 1, 0); app.root.current = 'create'
                on_release: self.background_color = utils.get_color_from_hex('#BF98D1')
                FloatLayout:
                    Image:
                        source: "assets/images/addgroupicon.png"
                        size_hint: (0.5, 0.5)
                        pos_hint: {"center_x": 1.6, "center_y": 0.28}
            Button:
                background_normal: ""
                background_color: utils.get_color_from_hex('#BF98D1')
                on_press: self.background_color = (1.2, 1.2, 1, 0); app.root.current = 'profile'
                on_release: self.background_color = utils.get_color_from_hex('#BF98D1')
                FloatLayout:
                    Image:
                        source: "assets/images/myprofileicon.png"
                        size_hint: (0.4, 0.4)
                        pos_hint: {"center_x": 2.65, "center_y": 0.28}