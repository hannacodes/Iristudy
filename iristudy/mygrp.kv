            pos_hint: {"x": -.38, "top": 1.35}
            canvas.before: 
                Color: 
                    rgb: utils.get_color_from_hex("#A46BBE")
                Rectangle: 
                    pos: (root.width-217, root.height-17)
                    size: (196, 1.5)
        Label: 
            text: "Meeting Times"
            color: (0, 0, 0, 1)
            font_name: 'assets/fonts/static/Fredoka/Fredoka-regular'
            pos_hint: {"x": -.285, "top": 1.27}
            canvas.before: 
                Color: 
                    rgb: utils.get_color_from_hex("#A46BBE")
